{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend/rockxy/rockxy && ./mvnw clean install -DskipTests"
  },
  "deploy": {
    "startCommand": "cd backend/rockxy/rockxy && java -jar target/*.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}